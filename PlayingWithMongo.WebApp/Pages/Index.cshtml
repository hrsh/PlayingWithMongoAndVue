@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div id="app">
    <div class="form-group">
        <input v-model="name" 
               name="name" 
               placeholder="Name" 
               class="form-control" />
    </div>
    <div class="form-group">
        <input v-model="year" 
               name="year" 
               placeholder="Year" 
               class="form-control" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary"
                v-if="addMode"
                v-on:click="addMovie">
            Add
        </button>
        <button class="btn btn-secondary"
                v-else
                v-on:click="updateMovie">
            Update
        </button>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Year</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr v-for="(item,index) in movieList">
                <td>{{1+index}}</td>
                <td>{{item.name}}</td>
                <td>{{item.year}}</td>
                <td class="text-right">
                    <button class="btn btn-primary btn-sm"
                            v-on:click="editMovie(index, item)">
                        Edit
                    </button>
                    <button class="btn btn-danger btn-sm"
                            v-on:click="removeMovie(index, item)">Delete</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        var app = new Vue({
            el: "#app",
            data: {
                movieList: [],
                name: "",
                year: 0,
                id: null,
                addMode: true,
                index: null,
            },
            mounted: function () {
                this.getMovieList();
            },
            methods: {
                editMovie: function (index, item) {
                    const vm = this;
                    vm.name = item.name;
                    vm.year = item.year;
                    vm.id = item.id;
                    vm.index = index;
                    vm.addMode = false;
                },
                updateMovie: function () {
                    const vm = this;

                    var item = {
                        name: vm.name,
                        year: vm.year,
                        id: vm.id
                    }

                    $.ajax({
                        url: "https://localhost:5001/api/movie",
                        method: "PUT",
                        data: JSON.stringify(item),
                        contentType: "application/json",
                    }).done(function () {
                        vm.movieList[vm.index].name = vm.name;
                        vm.movieList[vm.index].year = vm.year;
                        toastr.success("Movie updated!");
                    }).fail(function () {
                        toastr.error("Error!");
                    }).always(function () {
                        vm.addMode = true;
                    });
                },
                removeMovie: function (index, item) {
                    const vm = this;

                    $.ajax({
                        url: "https://localhost:5001/api/movie",
                        method: "DELETE",
                        data: JSON.stringify(item),
                        contentType: "application/json",
                    }).done(function () {
                        vm.movieList.splice(index, 1);
                        toastr.success("Movie removed!");
                    }).fail(function () {
                        toastr.error("Error!");
                    }).always(function () {
                        // ignore
                    });
                },
                addMovie: function () {
                    var newMovie = {
                        name: this.name,
                        year: this.year
                    }
                    const vm = this;

                    $.ajax({
                        url: "https://localhost:5001/api/movie",
                        method: "post",
                        data: JSON.stringify(newMovie),
                        contentType: "application/json",
                    }).done(function () {
                        vm.movieList.splice(0, 0, newMovie);
                        toastr.success("Movie added");
                    }).fail(function () {
                        toastr.error("Error!");
                    }).always(function () {
                        vm.name = "";
                        vm.year = null;
                    });
                },
                getMovieList: function () {
                    var vm = this;
                    $.ajax({
                        url: "https://localhost:5001/api/movie",
                        method: "Get"
                    }).done((data) => {
                            vm.movieList = data,
                                console.table(data);
                        })
                }
            }
        });
    </script>
}